<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fjoggs.tidfortrening.MainActivity"
    android:id="@+id/mainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_main"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:textSize="@dimen/hello_world_size"
        />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:id="@+id/stopWatch"
        android:textSize="@dimen/hello_world_size"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_activites"
        android:layout_centerHorizontal="true"
        android:id="@+id/activityList"
        android:layout_above="@id/buttonStartTracking"
        android:layout_below="@id/stopWatch"
        android:textSize="@dimen/hello_world_size"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_start_tracking"
        android:id="@+id/buttonStartTracking"
        android:layout_above="@id/buttonStopTracking"
        android:onClick="startTracking"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_stop_tracking"
        android:id="@+id/buttonStopTracking"
        android:layout_above="@id/buttonStoreActivity"
        android:onClick="stopTracking"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_store_activity"
        android:id="@+id/buttonStoreActivity"
        android:layout_above="@id/buttonDeleteActivity"
        android:onClick="storeActivity"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_delete_activity"
        android:id="@+id/buttonDeleteActivity"
        android:layout_above="@id/buttonShowActivites"
        android:onClick="deleteActivity"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_show_activites"
        android:id="@+id/buttonShowActivites"
        android:layout_alignParentBottom="true"
        android:onClick="showAllActivites"
        />

</RelativeLayout>
